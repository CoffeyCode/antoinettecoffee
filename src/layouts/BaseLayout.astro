---
import BaseHead from "@/components/BaseHead.astro";
import Navigation from "@/components/global/Navigation.astro";

const {booking_link, link_text, site_title} = Astro.props
---

<html lang="en" class="scroll-smooth selection:bg-black selection:text-white">
  <head>
    <BaseHead />
  </head>
  <body class="bg-gray-100 flex flex-col min-h-screen mx-auto 2xl:max-w-screen-xl relative">

    <Navigation booking_link  = { booking_link } link_text = { link_text } site_title = {site_title}  />

    <main class="flex-grow relative">
      <slot />
    </main>

    <script
      is:inline
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      is:inline
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
  </body>
</html>
