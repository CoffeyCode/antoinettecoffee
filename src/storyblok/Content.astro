---
  import { storyblokEditable } from '@storyblok/astro';
  import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';
 
  const { blok } = Astro.props
---
 
<section class="overflow-hidden relative">
  <div class="p-4 lg:p-8 lg:pb-24 max-w-7xl mx-auto relative mt-20 md:mt-0">
    <div {...storyblokEditable(blok)} class=`grid grid-cols-1 gap-2 lg:grid-cols-${blok.columns}`>
      {blok.body?.map(blok => {return <StoryblokComponent blok={blok} />})}
    </div>
  </div>
</section>
