---
import { storyblokEditable } from '@storyblok/astro';

const { blok } = Astro.props
---

<div id="work" {...storyblokEditable(blok)}
  class="bg-gray-200 rounded-3xl p-8 flex flex-col items-center justify-center scroll-mt-24"
>
  <div>
    <div>
      <h2
        class="text-2xl tracking-tighter font-light lg:text-7xl text-red-600  font-display"
      >
        {blok.title}
      </h2>
    </div>
    <div>
      <p class="text-2xl text-black mt-8 xl:text-xl">
{blok.content}
      </p>
    </div>
  </div>
</div>
